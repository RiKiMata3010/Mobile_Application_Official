<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tax_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/output"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"/>

    <EditText
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hourly_rate"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/output"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:onClick="Calculate"
        android:text="Calculate" />

    <EditText
        android:id="@+id/no_of_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:hint="Enter Number of Hours"
        android:inputType="text"/>

    <EditText
        android:id="@+id/hourly_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_of_hours"
        android:layout_marginStart="99dp"
        android:layout_marginTop="-83dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="110dp"
        android:ems="10"
        android:hint="Enter Hourly Rate"
        android:inputType="text" />

</RelativeLayout>